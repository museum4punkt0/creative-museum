{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "nuxt-windicss",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/auth-next",
      "@nuxtjs/i18n",
      "@nuxtjs/dayjs",
      "dayjs/plugin/relativeTime",
      "dayjs/plugin/duration"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
